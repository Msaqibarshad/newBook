@model BookModel

<div class="card mb-4 shadow-sm ">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl)? "/images/noimg.jpg": Model.CoverImageUrl)" class="bd-placeholder-img card-img-top" width="100" height="225" />

    @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225"></svg>*@
    <div class="card-body">
        <h3 class="card-title display-6">@(string.IsNullOrEmpty(Model.Title)? "Name is not Available" :Model.Title  )</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)? "Description is not Available" : Model.Description  )</p>
    </div>
    <div class="d-flex justify-content-between align-items-center m-2">

        <div class="btn-group">

            <a href="#" class="btn btn-sm  btn-outline-primary">
                View Details
            </a>
        </div>
        <small class="text-primary">Written By: @(string.IsNullOrEmpty(Model.Author)? "NA" : Model.Author  )</small>

    </div>

</div>