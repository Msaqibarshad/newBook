
@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "All Books";
}

<div class="container pb-5">
    <h3 class="display-4">
        All Books
    </h3>
    <div class="row">


        @foreach (var book in Model)
        {
            <div class="col-md-4 ">
                <div class="card mb-4 shadow-sm ">
                    <img src="~/images/h.jpg" class="bd-placeholder-img card-img-top" width="100" height="225" />

                    @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225"></svg>*@
                    <div class="card-body">
                        <h3 class="card-title display-6">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center m-2">

                        <div class="btn-group">

                            <a href="/book/GetBook/@book.Id" class="btn btn-sm  btn-outline-secondary">
                                View Details
                            </a>
                        </div>
                        <small class="text-muted">@book.Author</small>

                    </div>

                </div>
            </div>

        }


    </div>
</div>