
@model BookModel
@{ 
    ViewData["Title"] = "Add New Book";
}

<div class="container">


    <h3 class="display-4">Add A New Book</h3>
    <form method="post">

        @if (ViewBag.isSuccess)
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations!</strong> You should added new Book successfully.
            <br />
            Click <a  asp-action="getbook" asp-controller="book" asp-route-id="@ViewBag.BookId"> here</a> to view the Details
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }
        


        <div class="new ">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="new ">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="new ">
            <label asp-for="Pages"></label>
            <input asp-for="Pages" class="form-control" />
        </div>

        <div class="new ">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="new ">
            <button class="btn btn-primary" type="submit">Add New Book</button>
        </div>



    </form>




</div>