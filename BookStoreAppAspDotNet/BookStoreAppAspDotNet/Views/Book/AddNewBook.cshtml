
@model BookModel
@{ 
    ViewData["Title"] = "Add New Book";
    Layout = "_layout";
}

<div class="container">


    <h3 class="display-4">Add A New Book</h3>
    
    <form method="post" enctype="multipart/form-data" data-ajax="true"
          data-ajax-loading="#myLoader">

        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations!</strong> You should added new Book successfully.
                <br />
                Click <a asp-action="getbook" asp-controller="book" asp-route-id="@ViewBag.BookId"> here</a> to view the Details
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @*<div class="text-danger" asp-validation-summary="All"></div>*@






        <div class="new">
            <label asp-for="Language"></label>
            <select asp-for="Language" class="form-control">
                <option value="">Choose Language Of Your Book:</option>
                <option>English</option>
                <option>Urdu</option>
                <option>Punjabi</option>
                <option>Persian</option>
                <option>Arabic</option>
            </select>
            <span asp-validation-for="Language" class="text-danger">

            </span>
        </div>

        <div class="new ">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span class="text-danger" asp-validation-for="Title">

            </span>
        </div>

        <div class="new ">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span class="text-danger" asp-validation-for="Author">
            </span>
        </div>
        <div class="new ">
            <label asp-for="Pages"></label>
            <input asp-for="Pages" class="form-control" />
            <span class="text-danger" asp-validation-for="Pages">
            </span>
        </div>

        <div class="new ">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description">
            </span>

        </div>

        <div class="new ">
            <label asp-for="CoverPhoto"></label>
            <div class="mb-3">
                <input class="form-control" asp-for="CoverPhoto" id="formFile">
            </div>
            <span class="text-danger" asp-validation-for="CoverPhoto">
            </span>
        </div>


        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status" id="myLoader" style="display:none">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>


        <div class="new ">
            <button class="btn btn-primary" type="submit">Add New Book</button>
        </div>



    </form>




</div>

